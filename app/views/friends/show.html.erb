<p style="color: green"><%= notice %></p>

<div class="jumbotron jumbotron-fluid">
  <div class="container">

    <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %> </h1>
    <p class="lead"> <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>

    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-outline-info" %>
    <%= link_to "Back", friends_path, class:"btn btn-outline-secondary" %>
    <%= link_to "Delete", @friend, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your friend?"}, class:"btn btn-outline-danger" %>
  </div>
